{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1.js" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/main.html" },
    { "src": "^/main$", "dest": "/main.html" },
    { "src": "^/detail$", "dest": "/detail.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
